@model Carpool.Models.User

@{
    ViewBag.Title = "Log in";
}

<h2>Log in</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, null, htmlAttributes: new { @class = "control-label col-md-3 col-md-offset-0 col-sm-2 col-sm-offset-1 col-xs-3 col-xs-offset-1" })
            <div class="col-md-7 col-sm-7 col-xs-7">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", autofocus = "" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, null, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-sm-offset-0 col-xs-4 col-xs-offset-0" })
            <div class="col-md-7 col-sm-7  col-xs-7">
                @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Connection" class="btn btn-primary hvr-icon-wobble-horizontal" id="buttonHover">Connection</button>
            </div>
        </div>

    </div>
}