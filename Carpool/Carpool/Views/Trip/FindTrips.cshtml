@model Carpool.Models.User

@{
    ViewBag.Title = "Find trips";
}

<h2>Find trips</h2>

<div class="form-horizontal">

    <div class="row">
        <p>Price between:</p>
        <div class="form-group">
            <p class="control-label col-md-2">Lower boundary</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="0">
            </div>
        </div>
        <p>And:</p>
        <div class="form-group">
            <p class="control-label col-md-2">Upper boundary</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="3">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Number of places</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="2">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Date</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="10/02/2018">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Beginning hour</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="15:00">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Estimated time (in hours)*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="2">
            </div>
        </div>
    </div>

    <div class="row">
        <p>Going to:</p>

        <div class="form-group">
            <p class="control-label col-md-2">Address line 1*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="13 Hami street">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Address line 2</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">City*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="Paisley">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Country*</p>
            <div class="col-md-3">
                @Html.DropDownList("County", new SelectList(new List<string>() { "United-Kingdom", "Germany", "France", "Belgium", "Italy" }), new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="col-md-10">

        <div class="form-group row text-center">
            <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default hvr-icon-back" })
            </div>

            <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
                <button type="submit" class="btn btn-primary hvr-icon-fade">Find trips</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_FoundTrips");