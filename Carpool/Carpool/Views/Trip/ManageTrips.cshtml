@model IEnumerable<Carpool.Models.Trip>

@{
    ViewBag.Title = "Manage my trips";
}

<h2>Manage my trips</h2>

@if (Model.Count() == 0)
{   
    <p>You have no trips to manage for the moment</p>
}
else
{

    foreach (var item in Model)
    {
        <div class="col-md-10 trip">
            <div class="col-sm-3">
                <p>Destination: @item.Address.Line1/p>
                <p>@item.Address.Line2</p>
                <p>@item.Address.PostalCode @item.Address.City.Name</p>
            </div>

            <div class="col-sm-3">
                <p>@item.Address.City.Country.Name</p>
                <p>Number of persons: @item.NumberOfPlaces</p>
                <p>Price per person: £@item.Price</p>
            </div>

            <div class="col-sm-3">
                <p>Closing: @item.Closing</p>
                <p>Beginning: @item.Beginning</p>
                <p>Estimated duration: @item.Duration</p>
            </div>

            <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
                <button type="submit" class="btn btn-primary hvr-icon-fade button-trip">Leave</button>
            </div>
        </div>
    }
}

<div class="col-md-10">
    <br />

    <div class="form-group row text-center">
        <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
            @Html.ActionLink("Create a trip", "CreateTrip", "Trip", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>