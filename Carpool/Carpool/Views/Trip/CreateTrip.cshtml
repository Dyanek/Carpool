@{
    ViewBag.Title = "Create a trip";
}

<h2>Create a trip</h2>

<div class="form-horizontal">
    <div class="row">
        <div class="form-group">
            <p class="control-label col-md-2">Number of persons (not including you)*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="2">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Total price (in pounds)*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="2.25">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Beginning hour*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="15:00">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Estimated time (in hours)*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="0.5">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <p class="control-label col-md-2">Address line 1*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="13 Hami street">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Address line 2</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">City*</p>
            <div class="col-md-3">
                <input type="text" class="form-control" value="Paisley">
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Country*</p>
            <div class="col-md-3">
                @Html.DropDownList("County", new SelectList(new List<string>() { "United-Kingdom", "Germany", "France", "Belgium", "Italy" }), new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="col-md-10">
        <hr />

        <div class="form-group row text-center">
            <p class="control-label col-md-3">* = compulsory fields</p>
            <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
                @Html.ActionLink("Cancel", "Index", "Trip", new { @class = "btn btn-default hvr-icon-back NewsBtnDelet" })
            </div>
            <div class="col-md-2 col-sm-2 col-lg-2 col-xs-12">
                @Html.ActionLink("Create", "Index", "Trip", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
