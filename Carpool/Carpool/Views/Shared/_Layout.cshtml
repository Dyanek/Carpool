<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Carpool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>


            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Find trips", "FindTrips", "Trip")</li>
                    @if (Session["Id"] != null)
                    {
                        <li>@Html.ActionLink("Manage my trips", "ManageTrips", "Trip")</li>
                        <li>@Html.ActionLink("Manage my friends", "ManageFriends", "Account")</li>
                    }
                </ul>

                @Html.Action("_Login", "Shared")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error</span>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error</span>
                <strong>Well done!</strong> @TempData["Success"]
            </div>
        }

        @RenderBody()
        <hr />
    </div>

    <footer class="container body-content">
        

        <div class="col-md-2">
            <a href="http://www.facebook.com/assocFIAI" target="_blank"><i class="fa fa-facebook-square fa-3x"></i></a>
        </div>
        <div class="col-md-2 col-md-offset-1">
            @Html.ActionLink("About", "About")
        </div>
        <div class="col-md-2 col-md-offset-1">
            @Html.ActionLink("Contact", "Contact")
        </div>
        <div class="col-md-2 col-md-offset-2">
            <p>&copy; @DateTime.Now.Year - Carpool</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>